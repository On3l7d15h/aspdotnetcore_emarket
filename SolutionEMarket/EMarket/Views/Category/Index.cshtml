@*Strong Typed*@
@using SolutionEMarket.Core.Application.ViewModels.Category;
@model List<CategoryViewModel>
@{
    ViewData["Title"] = "Category Page";
}

    <section class="w-[60rem] mx-auto flex flex-row justify-between items-center relative top-[1rem] mt-[0.150rem]">
        <div class="text-white h-auto flex flex-row justify-center items-center gap-2">
            <svg viewBox="0 0 15 15" fill="none" xmlns="http://www.w3.org/2000/svg" width="40" height="40">
                <path d="M.5 7.5l-.354-.354a.5.5 0 000 .708L.5 7.5zm7 7l-.354.354a.5.5 0 00.708 0L7.5 14.5zm7-7l.354.354A.5.5 0 0015 7.5h-.5zm-7-7V0a.5.5 0 00-.354.146L7.5.5zM.146 7.854l7 7 .708-.708-7-7-.708.708zm7.708 7l7-7-.708-.708-7 7 .708.708zM15 7.5v-6h-1v6h1zM13.5 0h-6v1h6V0zM7.146.146l-7 7 .708.708 7-7-.708-.708zM15 1.5A1.5 1.5 0 0013.5 0v1a.5.5 0 01.5.5h1zM10.5 5a.5.5 0 01-.5-.5H9A1.5 1.5 0 0010.5 6V5zm.5-.5a.5.5 0 01-.5.5v1A1.5 1.5 0 0012 4.5h-1zm-.5-.5a.5.5 0 01.5.5h1A1.5 1.5 0 0010.5 3v1zm0-1A1.5 1.5 0 009 4.5h1a.5.5 0 01.5-.5V3z" fill="currentColor"></path>
            </svg>
            <h1 class="text-3xl text-white text-center mb-4 mt-1 font-bold">
                Categories
            </h1>
        </div>

        <a asp-controller="Category" asp-action="Create" class="text-white rounded flex flex-col px-3 justify-between items-center p-1 bg-white/30 bgorder-2 border border-opacity-50 backdrop-blur-sm shadow shadow-white/50 hover:text-teal-200 duration-300 transition">
            <svg viewBox="0 0 15 15" fill="none" xmlns="http://www.w3.org/2000/svg" width="20" height="20"><path d="M7.5 1v13M1 7.5h13" stroke="currentColor"></path></svg>
            Create
        </a>
    </section>

<div class="w-[60rem] h-[30rem] shadow shadow-white/50 relative top-[2.5rem] mx-auto bg-white/25 overflow-hidden border-[0.125rem] border-white border-opacity-50 rounded overflow-hidden">
    <section class="backdrop-blur-sm w-full h-full flex flex-row justify-between items-center">

        <!-- Title -->
        <div class="w-[15rem] h-full rounded text-center flex flex-col justify-center items-center text-white">
            
        </div>

        <div class="bg-gray-300 w-[45rem] h-full rounded-left p-2 flex flex-row justify-start items-start gap-2 flex-wrap">
            @if (Model.Count() > 0)
            {
                @foreach (var item in Model)
                {
                    <div class="w-[14rem] h-[8.5rem] m-0 bg-white/25 border-[0.125rem] border-white border-opacity-50 rounded shadow shadow-white/50">
                        <section class="backdrop-blur-lg">
                            <section class="flex flex-row justify-between items-center h-[8rem] p-1">
                                
                                <!-- Product Information --> 
                                <div class="w-2/3 h-full text-left flex flex-col justify-center items-start">
                                    <p class="text-2xl font-bold">@item.Name</p>
                                    <p class="text-gray-600/80 w-full text-ellipsis overflow-hidden whitespace-nowrap mb-2">@item.Description</p>
                                </div>

                                <!-- Links --> 
                                <div class="w-1/3 flex flex-col justify-between items-center gap-2">
                                    <a asp-controller="Category" asp-action="Update" asp-route-id="@item.Id" class="w-[95%] flex flex-col justify-between items-center rounded bg-teal-400 text-white bg-teal-400/50 backdrop-blur border-2 border-teal-400 border-opacity-20 px-3 shadow-lg shadow-teal-400/50">
                                        <svg viewBox="0 0 15 15" fill="none" xmlns="http://www.w3.org/2000/svg" width="20" height="20"><path d="M.5 10.5l-.354-.354-.146.147v.207h.5zm10-10l.354-.354a.5.5 0 00-.708 0L10.5.5zm4 4l.354.354a.5.5 0 000-.708L14.5 4.5zm-10 10v.5h.207l.147-.146L4.5 14.5zm-4 0H0a.5.5 0 00.5.5v-.5zm.354-3.646l10-10-.708-.708-10 10 .708.708zm9.292-10l4 4 .708-.708-4-4-.708.708zm4 3.292l-10 10 .708.708 10-10-.708-.708zM4.5 14h-4v1h4v-1zm-3.5.5v-4H0v4h1z" fill="currentColor"></path></svg>
                                        Edit
                                    </a>
                                    <a asp-controller="Category" asp-route-id="@item.Id" asp-action="Delete" class="w-[95%] flex flex-col justify-between items-center rounded bg-red-400 text-white bg-red-400/50 backdrop-blur border-2 border-red-400 border-opacity-20 px-3 shadow-lg shadow-red-400/50">
                                        <svg viewBox="0 0 15 15" fill="none" xmlns="http://www.w3.org/2000/svg" width="20" height="20"><path d="M4.5 3V1.5a1 1 0 011-1h4a1 1 0 011 1V3M0 3.5h15m-13.5 0v10a1 1 0 001 1h10a1 1 0 001-1v-10M7.5 7v5m-3-3v3m6-3v3" stroke="currentColor"></path></svg>
                                        Delete
                                    </a>
                                </div>

                            </section>
                        </section>
                    </div>
                }
            }
            else
            {
                <div class="w-full h-full flex flex-row justify-center items-center text-3xl text-white">
                    No products!
                </div>
            }
        </div>

    </section>
</div>
